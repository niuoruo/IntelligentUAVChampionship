<launch>
    <arg name="map_size_x" value="1000.0"/>
    <arg name="map_size_y" value="1000.0"/>
    <arg name="map_size_z" value="100.0"/>
    <arg name="odom_topic" value="Odometry" />

    <include file="$(find ego_planner)/launch/include/run_in_sim.xml">
        <arg name="drone_id" value="0"/>
        <arg name="init_x" value="0.0"/>
        <arg name="init_y" value="0.0"/>
        <arg name="init_z" value="0.0"/>
        <arg name="map_size_x" value="$(arg map_size_x)"/>
        <arg name="map_size_y" value="$(arg map_size_y)"/>
        <arg name="map_size_z" value="$(arg map_size_z)"/>
        <arg name="odom_topic" value="$(arg odom_topic)"/>
        <arg name="flight_type" value="1"/>

        <arg name="point_num" default="4"/>
        <arg name="target0_x" default="44.0"/>
        <arg name="target0_y" default="-4.0"/>
        <arg name="target0_z" default="3.0"/>
        <arg name="target1_x" default="70.0"/>
        <arg name="target1_y" default="-7.0"/>
        <arg name="target1_z" default="6.0"/>
        <arg name="target2_x" default="120.0"/>
        <arg name="target2_y" default="-15.0"/>
        <arg name="target2_z" default="8.0"/>
        <arg name="target3_x" default="150.0"/>
        <arg name="target3_y" default="-1"/>
        <arg name="target3_z" default="1.0"/>
    </include>

    <include file="$(find px4ctrl)/launch/ctrl_md.launch"/>

</launch>

